#----------------------------------------------------------------------------------------------------------------------
# Печатаем строку из 100  знаков равно
#----------------------------------------------------------------------------------------------------------------------
print_line()(printf '%100.s' ' '| tr ' ' '=' && printf '\n')


#----------------------------------------------------------------------------------------------------------------------
# Печатаем заголовок модуля и исполняем сам модуль с тестами
#----------------------------------------------------------------------------------------------------------------------
run_test() {
	echo "${1}";
	bats -p "${2}";
	print_line; echo
}
